<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="8dp">

    <!-- Menu Item Row -->
    <LinearLayout
        android:id="@+id/menuItemRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#94b1b6"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <!-- Item image -->
        <ImageView
            android:id="@+id/menuItemImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@android:drawable/ic_menu_gallery"
            android:contentDescription="Menu item image"
            android:background="#808080"
            android:scaleType="centerCrop"/>

        <!-- Item name -->
        <TextView
            android:id="@+id/menuItemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Item Name"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="16dp"/>

        <!-- Price -->
        <TextView
            android:id="@+id/menuItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â£0.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginEnd="16dp"/>

        <!-- Expand button -->
        <ImageButton
            android:id="@+id/expandButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/arrow_down_float"
            android:contentDescription="Expand to see description"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    </LinearLayout>

    <!-- Expanded Description Box (hidden by default) -->
    <TextView
        android:id="@+id/menuItemDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item description goes here"
        android:textSize="16sp"
        android:textColor="#666666"
        android:padding="16dp"
        android:background="#edc099"
        android:fontFamily="sans-serif-light"
        android:visibility="gone"/>

</LinearLayout>