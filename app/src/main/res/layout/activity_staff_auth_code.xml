<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c8d5d7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/authTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/staff_auth_title"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp"
            android:textAlignment="center"/>

        <!-- Instructions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/staff_auth_instructions"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="32dp"
            android:textAlignment="center"
            android:layout_marginHorizontal="16dp"/>

        <!-- Staff Code Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/staff_code_label"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="16dp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:labelFor="@id/staffCodeInput"/>

        <!-- Staff Code input field -->
        <EditText
            android:id="@+id/staffCodeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/edittext_background"
            android:inputType="textCapCharacters"
            android:layout_marginBottom="8dp"
            android:padding="16dp"
            android:hint="@string/staff_code_hint"
            android:textSize="18sp"
            android:textAlignment="center"
            tools:ignore="Autofill" />

        <!-- Warning message -->
        <TextView
            android:id="@+id/staffCodeWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/incorrect_staff_code"
            android:textSize="15sp"
            android:layout_marginHorizontal="16dp"
            android:textColor="#c66d6f"
            android:layout_marginBottom="24dp"
            android:textAlignment="center"
            android:visibility="invisible" />

        <!-- Verify button -->
        <Button
            android:id="@+id/verifyButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/verify_code_btn"
            android:textSize="18sp"
            android:padding="16dp"
            android:textAllCaps="false"
            android:backgroundTint="#e5a975"
            android:textColor="#000000"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp"/>

        <!-- Back to login link -->
        <TextView
            android:id="@+id/backToLoginLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_to_login_link"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

    <!-- Back arrow -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/back_arrow"
        android:contentDescription="@string/back_arrow_description"
        android:clickable="true"
        android:focusable="true"/>

</FrameLayout>