<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c8d5d7">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="start|top"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/back_arrow"
                android:contentDescription="@string/back_arrow_description"
                android:clickable="true"
                android:focusable="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:layout_gravity="center">

                <!--Title-->
                <TextView
                    android:id="@+id/signupTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_back"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"/>

                <!--Email Label-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email_label"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="16dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="10dp"
                    android:labelFor="@id/emailInput"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/emailInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/edittext_background"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="30dp"
                    android:padding="16dp"
                    tools:ignore="Autofill"
                    android:layout_gravity="center"/>

                <!--Password Label-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/password_label"
                    android:layout_marginHorizontal="16dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="10dp"
                    android:labelFor="@id/passwordInput"/>

                <!--Password input field-->
                <EditText
                    android:id="@+id/passwordInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:padding="16dp"
                    android:background="@drawable/edittext_background"
                    android:layout_marginBottom="5dp"
                    android:layout_marginHorizontal="16dp"
                    tools:ignore="Autofill"
                    android:layout_gravity="center"/>

                <!--Unsuccessful signup warning-->
                <TextView
                    android:id="@+id/unsuccessfulSignup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/unsuccessful_signup"
                    android:textSize="15sp"
                    android:layout_marginHorizontal="16dp"
                    android:textColor="#c66d6f"
                    android:layout_marginBottom="20dp"
                    android:visibility="invisible" />

                <!--Signup button-->
                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="@string/login_btn"
                    android:textSize="18sp"
                    android:padding="16dp"
                    android:textAllCaps="false"
                    android:backgroundTint="#e5a975"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>