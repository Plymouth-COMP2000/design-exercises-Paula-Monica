<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RestaurantManager"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <activity
            android:name=".activities.common.WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.guest.GuestSignupActivity"
            android:exported="true"/>

        <activity
            android:name=".activities.common.SuccessfulSignupActivity"
            android:exported="true"/>

        <activity
            android:name=".activities.common.LoginActivity"
            android:exported="true"/>

        <activity
            android:name=".activities.guest.GuestDashboardActivity"
            android:exported="true"/>

        <activity
            android:name=".activities.guest.GuestViewMenuActivity"
            android:exported="true"/>

        <activity
            android:name=".activities.guest.GuestChangeSettingsActivity"
            android:exported="true"/>

        <activity
            android:name=".activities.guest.GuestMakeReservationActivity"
            android:exported="true"/>

        <activity
            android:name=".activities.guest.GuestEditReservationActivity"
            android:exported="true"/>

        <activity
            android:name=".activities.guest.MyReservationsActivity"
            android:exported="true"/>

        <activity
            android:name=".activities.guest.SuccessfulReservationActivity"
            android:exported="true"/>

        <activity
            android:name=".activities.guest.SuccessfulEditReservationActivity"
            android:exported="true"/>

        <activity
            android:name=".activities.staff.StaffDashboardActivity"
            android:exported="true"/>

    </application>

</manifest>